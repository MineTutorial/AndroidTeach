<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
    android:id="@+id/gotoListActivity"
    android:layout_width="100dp"
    android:layout_height="50dp"
    android:text="ListActivity"
    android:background="@color/colorAccent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/gotwechatActivity"
        android:layout_width="100dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/gotoListActivity"
        android:layout_height="50dp"
        android:text="WechatActivity"
        android:background="@color/colorAccent"
        tools:ignore="MissingConstraints"
        android:layout_marginLeft="10dp" />

    <TextView
        android:id="@+id/goto_dialog"
        android:layout_width="100dp"
        android:layout_marginStart="10dp"
        android:layout_height="50dp"
        android:gravity="center"
        app:layout_constraintLeft_toRightOf="@id/gotwechatActivity"
        android:text="Dialog"
        android:background="@color/colorAccent"
        tools:ignore="MissingConstraints"
        android:layout_marginLeft="10dp" />

    <Button
        android:id="@+id/fragment_add"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:text="fragment add()"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Button
        android:id="@+id/fragment_remove"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:text="fragment remove()"
        android:layout_marginTop="60dp"
        android:layout_marginStart="110dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="110dp" />

    <Button
        android:id="@+id/fragment_replace"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:text="fragment replace()"
        android:layout_marginStart="220dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="220dp" />


    <TextView
        android:id="@+id/goto_anim"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/gotwechatActivity"
        android:text="anim"
        android:background="@color/colorAccent"
        tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/goto_pager"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_marginStart="110dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/gotwechatActivity"
        android:text="viewpager"
        android:background="@color/colorAccent"
        tools:ignore="MissingConstraints"
        android:layout_marginLeft="110dp" />

    <TextView
        android:id="@+id/goto_camer"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_marginStart="220dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/gotwechatActivity"
        android:text="camer"
        android:background="@color/colorAccent"
        tools:ignore="MissingConstraints"
        android:layout_marginLeft="110dp" />

    <TextView
        android:id="@+id/goto_permission"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="210dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/gotwechatActivity"
        android:text="permission"
        android:background="@color/colorAccent"
        tools:ignore="MissingConstraints"
        android:layout_marginLeft="110dp" />

</android.support.constraint.ConstraintLayout>